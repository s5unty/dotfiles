cd() {
    if [[ "$@" == "." ]]; then
        while true; do
            local lsd=$(echo ".." && /bin/ls -p | /bin/grep '/$' | /bin/sed 's;/$;;')
            local dir="$(printf '%s\n' "${lsd[@]}" |
                fzf --reverse --preview '
                    __cd_nxt="$(echo {})";
                    __cd_path="$(echo $(pwd)/${__cd_nxt} | sed "s;//;/;")";
                    echo $__cd_path;
                    echo;
                    ls -p --color=always "${__cd_path}";
            ')"
            [[ ${#dir} != 0 ]] || return 0
            builtin cd "$dir" &> /dev/null
        done
    fi

    if [[ "$#" != 0 ]]; then
        builtin cd "$@";
        ls;
        return
    fi
}

